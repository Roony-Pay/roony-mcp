{
  "name": "@roony-pay/governance",
  "version": "1.0.0",
  "description": "Open source AI agent payment governance engine with spending controls, approval workflows, and MCP support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "agents",
    "llm",
    "payments",
    "governance",
    "spending-controls",
    "virtual-cards",
    "mcp",
    "model-context-protocol",
    "anthropic",
    "claude",
    "openai",
    "stripe",
    "fintech"
  ],
  "author": "Roony <hello@roony.pay>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roony-pay/roony-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/roony-pay/roony-mcp/issues"
  },
  "homepage": "https://github.com/roony-pay/roony-mcp#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
